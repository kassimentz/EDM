<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- deixa o width como 0dp para ele nao precisar fazer duas contas antes de dividir o weight -->
    <fragment
        android:id="@+id/listaFrag"
        android:layout_weight="0.3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:name="edm.kassimentz.exemplofragment.ListaFrag"/>

    <fragment
        android:layout_weight="0.7"
        android:id="@+id/detalheFrag"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:name="edm.kassimentz.exemplofragment.DetalheFrag"/>

</LinearLayout>